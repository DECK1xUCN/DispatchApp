generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin", "darwin-arm64"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Flight {
  id              Int            @id @default(autoincrement())
  sites           Site[]
  helicopter      Helicopter?    @relation(fields: [helicopterId], references: [id])
  helicopterId    Int?
  pilot           Pilot?         @relation(fields: [pilotId], references: [id])
  pilotId         Int?
  hoistOperator   HoistOperator? @relation(fields: [hoistOperatorId], references: [id])
  hoistOperatorId Int?
}

model Site {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  flights   Flight[]
  locations Location[]
}

model Location {
  id     Int    @id @default(autoincrement())
  name   String @unique
  lat    Float  @default(0)
  lng    Float  @default(0)
  type   String
  site   Site   @relation(fields: [siteId], references: [id])
  siteId Int
}

model Helicopter {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  model   String
  reg     String   @unique
  flights Flight[]
}

model Pilot {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  flights Flight[]
}

model HoistOperator {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  flights Flight[]
}
